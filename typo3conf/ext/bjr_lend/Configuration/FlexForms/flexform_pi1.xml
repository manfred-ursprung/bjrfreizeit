<T3DataStructure>
	<sheets>
		<sDEF>
			<ROOT>
				<TCEforms>
					<sheetTitle>Allgemeine Einstellungen</sheetTitle>
				</TCEforms>
				<type>array</type>
				<el>
					<switchableControllerActions>
						<TCEforms>
							<label>Auswählen des Darstellungsmodus</label>
							<config>
								<type>select</type>
								<items>
									<numIndex index="0">
										<numIndex index="0">Artikelliste</numIndex>
										<numIndex index="1">Article->list;Article->show</numIndex>
									</numIndex>
                                    <numIndex index="1">
                                        <numIndex index="0">Neuesten Artikel</numIndex>
                                        <numIndex index="1">Article->listNewest</numIndex>
                                    </numIndex>
                                    <numIndex index="2">
                                        <numIndex index="0">Beliebtesten Artikel</numIndex>
                                        <numIndex index="1">Article->listMostPopular</numIndex>
                                    </numIndex>
                                    <numIndex index="3">
                                        <numIndex index="0">Artikeldetail Darstellung</numIndex>
                                        <numIndex index="1">Article->show;Article->list</numIndex>
                                    </numIndex>
                                    <numIndex index="4">
                                        <numIndex index="0">Artikelsuche Formular</numIndex>
                                        <numIndex index="1">Article->search</numIndex>
                                    </numIndex>
                                    <numIndex index="5">
                                        <numIndex index="0">Artikelsuche Ergebnisliste</numIndex>
                                        <numIndex index="1">Article->searchResult</numIndex>
                                    </numIndex>
                                    <numIndex index="6">
                                        <numIndex index="0">Zufällige Anzeige der Artikel</numIndex>
                                        <numIndex index="1">Article->listRandom</numIndex>
                                    </numIndex>
                                    <numIndex index="7">
                                        <numIndex index="0">Artikelsuche Ergebnisliste für Iframe</numIndex>
                                        <numIndex index="1">Article->searchResultFrame</numIndex>
                                    </numIndex>
								</items>
							</config>
						</TCEforms>
					</switchableControllerActions>
                    <settings.storagePage>
                        <TCEforms>
                            <exclude>1</exclude>
                            <label>Seiten mit Artikel</label>
                            <config>
                                <type>group</type>
                                <internal_type>db</internal_type>
                                <allowed>pages</allowed>
                                <size>5</size>
                                <maxitems>5</maxitems>
                                <minitems>0</minitems>
                                <show_thumbs>1</show_thumbs>

                            </config>
                        </TCEforms>
                    </settings.storagePage>
				</el>
			</ROOT>
		</sDEF>
        <sListen>
            <ROOT>
                <TCEforms>
                    <sheetTitle>Einstellungen für Listendarstellung</sheetTitle>
                </TCEforms>
                <type>array</type>
                <el>
                    <settings.sorting>
                        <TCEforms>
                            <exclude>1</exclude>
                            <label>Sortierung</label>
                            <config>
                                <type>select</type>
                                <items type="array">
                                    <numIndex index="0" type="array">
                                        <numIndex index="0">alfabetisch</numIndex>
                                        <numIndex index="1">0</numIndex>
                                    </numIndex>
                                    <numIndex index="1" type="array">
                                        <numIndex index="0">Nach Einstelldatum</numIndex>
                                        <numIndex index="1">1</numIndex>
                                    </numIndex>
                                    <numIndex index="2" type="array">
                                        <numIndex index="0">Nach Verfügbarkeit</numIndex>
                                        <numIndex index="1">2</numIndex>
                                    </numIndex>
                                    <numIndex index="3" type="array">
                                        <numIndex index="0">Nach Region</numIndex>
                                        <numIndex index="1">3</numIndex>
                                    </numIndex>
                                    <numIndex index="4" type="array">
                                        <numIndex index="0">Zufällige Anzeige</numIndex>
                                        <numIndex index="1">4</numIndex>
                                    </numIndex>
                                </items>
                                <default>0</default>
                            </config>
                        </TCEforms>
                    </settings.sorting>
                    <settings.detailPage>
                        <TCEforms>
                            <exclude>1</exclude>
                            <label>Detailseite zu der verlinkt wird</label>
                            <config>
                                <type>group</type>
                                <internal_type>db</internal_type>
                                <allowed>pages</allowed>
                                <size>1</size>
                                <maxitems>1</maxitems>
                                <minitems>0</minitems>
                                <show_thumbs>1</show_thumbs>

                            </config>
                        </TCEforms>
                    </settings.detailPage>
                </el>
            </ROOT>
        </sListen>
        <sDetailseite>
            <ROOT>
                <TCEforms>
                    <sheetTitle>Einstellungen für Detailseite</sheetTitle>
                </TCEforms>
                <type>array</type>
                <el>
                    <settings.listPage>
                        <TCEforms>
                            <exclude>1</exclude>
                            <label>Seite für Rücksprung</label>
                            <config>
                                <type>group</type>
                                <internal_type>db</internal_type>
                                <allowed>pages</allowed>
                                <size>1</size>
                                <maxitems>1</maxitems>
                                <minitems>0</minitems>
                                <show_thumbs>1</show_thumbs>

                            </config>
                        </TCEforms>
                    </settings.listPage>
                </el>
            </ROOT>
        </sDetailseite>
	</sheets>
</T3DataStructure>